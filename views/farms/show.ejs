<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Farm</title>
</head>
<body>
    <h1><%= farm.name %> </h1>
    <ul>
        <li>City: <%= farm.city %> </li>
        <li>Email: <%= farm.email %></li>
    </ul>
    <h2>Products</h2>
    <ol>
    <% for(let product of farm.products){ %> 
        <a href="/products/<%= product._id %>">
            <li><%= product.name %> </li>
            <ul>
               <li>Price: $<%=product.price %> </li> 
            </ul>
        </a>
        <br>
    <% } %> 
    </ol>
    <br>
    <a href='/farms/<%= farm._id %>/products/new'><button>Add Product</button></a>
    <form action='/farms/<%= farm._id %>?_method=DELETE' method="POST" style="display:inline;">
        <button>Delete</button>
    </form>
    <br><hr>
    <a href="/farms"><button>All Farms</button></a>
</body>
</html>